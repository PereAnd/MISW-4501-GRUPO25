<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.FragmentMenuLogin">

    <ImageView
        android:id="@+id/servicio3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:src="@drawable/login" />

    <TextView
        android:id="@+id/titulo_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Inicio de sesión"
        android:textAlignment="center"
        android:textAppearance="@style/abc_syle" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="30dp"
        android:hint="@string/usuario_label"
        app:boxBackgroundColor="@color/light_blue"
        app:boxStrokeColor="@color/black">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="263dp"
            android:outlineSpotShadowColor="@color/black"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_gray"
            android:text="@string/usuario_placeholder" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="30dp"
        android:hint="@string/password_label"
        app:boxBackgroundColor="@color/light_blue"
        app:boxStrokeColor="@color/black"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:text="@string/password_placeholder" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonEntrevista"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/dark_yellow"
        android:fontFamily="@font/raleway_bold"
        android:text="Ingresar"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:cornerRadius="10dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        android:onClick="goToEnterview" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="¿Todavía no tenemos tu cuenta?"
        android:fontFamily="@font/raleway_light"
        android:textColor="@color/dark_purple"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonRegistro"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/dark_yellow"
        android:fontFamily="@font/raleway_bold"
        android:text="Registrarse"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:cornerRadius="10dp"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp"
        android:onClick="goToRegister" />

</LinearLayout>
