<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="60dp"
    android:paddingTop="30dp"
    android:background="@color/background_general"
    tools:context=".view.FragmentMenuLogin">

        <LinearLayout
            android:id="@+id/linearLayoutIngresoCandidato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageUser"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:src="@drawable/login" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Inicio de sesión"
                android:textColor="@color/black"
                android:textAppearance="@style/abc_syle"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="30dp"
                android:textAlignment="center" />

            <!-- Email  -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tiMailIngresoCandidato"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/dark_gray"
                android:hint="E-Mail"
                app:hintTextColor="@color/black"
                app:boxBackgroundColor="@color/light_blue"
                app:helperText="@string/required"
                app:counterEnabled="true"
                app:counterMaxLength="200"
                app:helperTextTextColor="@color/dark_yellow"
                app:endIconMode="clear_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMailIngresoCandidato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password  -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tiPasswordIngresoCandidato"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/dark_gray"
                android:hint="Password"
                app:hintTextColor="@color/black"
                app:boxBackgroundColor="@color/light_blue"
                app:helperText="@string/required"
                app:counterEnabled="true"
                app:counterMaxLength="200"
                app:helperTextTextColor="@color/dark_yellow"
                app:endIconMode="password_toggle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etIngresoCandidato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"/>
            </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonEntrevista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresar"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/dark_yellow" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="¿Todavía no tenemos tu cuenta?"
        android:fontFamily="@font/raleway_light"
        android:textColor="@color/dark_purple"
        android:textAlignment="center"
        android:textStyle="bold" />

        <Button
            android:id="@+id/buttonRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/dark_gray" />
        </LinearLayout>

</LinearLayout>
